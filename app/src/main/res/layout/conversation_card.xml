<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_info_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    card_view:cardElevation="2dp"
    android:background="#ffff99">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/img_user_profile_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/txt_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/img_user_profile_pic"/>

        <TextView
            android:id="@+id/txt_last_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hint_text"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_toRightOf="@+id/txt_friend_name"
            android:layout_alignRight="@+id/txt_last_msg"
            />

        <TextView
            android:gravity="bottom"
            android:id="@+id/txt_last_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/img_user_profile_pic"
            android:layout_toRightOf="@+id/img_user_profile_pic"
            android:layout_below="@+id/txt_friend_name"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>